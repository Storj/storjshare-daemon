{
  "name": "storjshare-daemon",
  "version": "2.0.0",
  "description": "utility required for farming on the storj network",
  "main": "index.js",
  "directories": {
    "test": "test",
    "lib": "lib"
  },
  "scripts": {
    "test": "npm run testsuite && npm run linter",
    "testsuite": "STORJ_ALLOW_LOOPBACK=1 ./node_modules/.bin/mocha test/** --recursive",
    "coverage": "STORJ_ALLOW_LOOPBACK=1 ./node_modules/.bin/istanbul cover ./node_modules/.bin/_mocha -- --recursive",
    "linter": "./node_modules/.bin/jshint --config .jshintrc ./index.js ./lib ./test"
  },
  "preferGlobal": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/storj/storjshare-utils.git"
  },
  "keywords": [
    "storj",
    "farmer",
    "utils",
    "storjshare",
    "share"
  ],
  "author": "Alexander Leitner <alex@storj.io>",
  "contributors": [],
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/storj/storjshare-utils/issues"
  },
  "homepage": "https://github.com/storj/storjshare-utils#readme",
  "dependencies": {
    "async": "^1.5.2",
    "du": "^0.1.0",
    "fd-diskspace": "littleskunk/fd-diskspace",
    "graceful-fs": "^4.1.9",
    "kad-logger-json": "^0.1.2",
    "merge": "^1.2.0",
    "storj-lib": "bookchin/storj-core",
    "storj-telemetry-reporter": "bookchin/storj-telemetry-reporter#upgrade/storj-lib-6"
  },
  "devDependencies": {
    "benchmark": "^2.1.1",
    "chai": "^2.2.0",
    "coveralls": "^2.11.2",
    "istanbul": "^0.3.13",
    "jshint": "2.8.0",
    "mocha": "^2.2.4",
    "noisegen": "^1.0.0",
    "proxyquire": "^1.7.3",
    "rimraf": "^2.5.3",
    "sinon": "^1.14.1"
  }
}
